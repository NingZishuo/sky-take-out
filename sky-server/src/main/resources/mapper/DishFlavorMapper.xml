<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.sky.mapper.DishFlavorMapper">

    <!--void insertFlavors(List<DishFlavor> flavors, Long dishId);-->
    <insert id="insertFlavors">
        INSERT INTO dish_flavor (dish_id, name, value) values
        <foreach collection="flavors" item="flavor" separator=",">
            (#{dishId},#{flavor.name},#{flavor.value})
        </foreach>
    </insert>

    <!--void deleteByDishId(String ids);-->
    <delete id="deleteByDishId">
        delete from dish_flavor where dish_id in (${ids})
    </delete>

</mapper>